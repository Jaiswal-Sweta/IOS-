//Mirrored Right Triangle
print("Enter total numbers of row : ",terminator:"")
var row:Int=Int(readLine() ?? "0")!

for i in 0...row-1
{
   for _ in stride(from:0,to:row-i-1,by:1)
   {
     print("  ",terminator:"")
   }
   for _ in stride(from:row-i-1,to:row,by:1)
   {
     print("* ",terminator:"")
   }
   print("\n")
}
