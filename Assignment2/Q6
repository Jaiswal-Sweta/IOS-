//Right Pascal's Triangle
print("Enter total numbers of row : ",terminator:"")
var row:Int=Int(readLine() ?? "0")!

for i in 1...row
{
   for _ in 1...i
   {
     print("*    ",terminator:"")
   }
   print("\n")
}
for i in 0...row
{
   for _ in stride(from:1,to:row-i,by:1)
   {
     print("*    ",terminator:"")
   }
   print("\n")
}
