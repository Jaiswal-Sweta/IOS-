// Pascal Triangle
var n = 1
print("Enter total numbers of row : ",terminator:"")
var row:Int=Int(readLine() ?? "0")!
for i in 0...row
{   
      for j in 0...i{
         if (j == 0 || i == 0)
         {
            n = 1
         }
         else
         {
            n = n * (i - j + 1) / j
         }
         print("\(n) ",terminator:"")
      }
      print();
}
